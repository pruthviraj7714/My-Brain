generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String       @id @default(uuid())
  username String        @unique
  photo    String?
  content  Content[]
  link     Link?
}

model Content {
  id          String      @id @default(uuid())
  title       String
  contentType ContentType
  link        String
  userId      String
  createdAt   DateTime  @default(now())
  user        User        @relation(fields: [userId], references: [id])
}

model Link {
  id     String @id @default(uuid())
  hash   String
  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId])
}

enum ContentType {
  TWEET
  YOUTUBE
  NOTION
  IMAGE
}
