generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  username String
  content  Content[]
  link     Link?
}

model Content {
  id          String      @id @default(uuid())
  title       String
  contentType ContentType
  link        String
  userId      Int
  user        User        @relation(fields: [userId], references: [id])
}

model Link {
  id     String @id @default(uuid())
  hash   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])

  @@unique([userId])
}

enum ContentType {
  TWEET
  YOUTUBE
  NOTION
  IMAGE
}
